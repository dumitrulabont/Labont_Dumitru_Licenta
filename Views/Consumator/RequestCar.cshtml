@model Labont_Dumitru_Licenta.Models.Request

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Cere masina spre inchiriere</h1>
Masina: @ViewData["Brand"] @ViewData["Model"]
<div class="row">
    <div class="col-md-4">
        <form asp-action="RequestCar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarId" value="@ViewData["CarId"]" />
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input class="form-control" asp-for="StartDate" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinishDate" class="control-label"></label>
                <input class="form-control" asp-for="FinishDate" />
                <span asp-validation-for="FinishDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="RequestCar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>