@model Labont_Dumitru_Licenta.Models.CarWithDetailsView

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCar" method="post" enctype="multipart/form-data"> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarDetail.Brand" class="control-label"></label>
                <input class="form-control" asp-for="CarDetail.Brand" />
                <span asp-validation-for="CarDetail.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarDetail.Model" class="control-label"></label>
                <input class="form-control" asp-for="CarDetail.Model" /> 
                <span asp-validation-for="CarDetail.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarDetail.Price" class="control-label"></label>
                <input class="form-control" asp-for="CarDetail.Price" /> 
                <span asp-validation-for="CarDetail.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarDetail.Color" class="control-label"></label>
                <input class="form-control" asp-for="CarDetail.Color" /> 
                <span asp-validation-for="CarDetail.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarDetail.Year" class="control-label"></label>
                <input class="form-control" asp-for="CarDetail.Year" /> 
                <span asp-validation-for="CarDetail.Year" class="text-danger"></span>
            </div>
            <select asp-for="CarDetail.CarType" asp-items="Html.GetEnumSelectList<CarType>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Car.IsAvailable" /> @Html.DisplayNameFor(model => model.Car.IsAvailable)
                </label>
            </div>
            <div class="form-group row">
                <div class="col-5">
                    <input type="file" name="files" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Creeaza" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Inapoi la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
