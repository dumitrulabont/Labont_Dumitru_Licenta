@model Labont_Dumitru_Licenta.Models.Car

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCar" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="CarDetailID"/>
            <div class="form-group">
                <label asp-for="CarDetail.Brand" class="control-label"></label>
                <input asp-for="CarDetail.Brand" class="form-control" />
                <span asp-validation-for="CarDetail.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarDetail.Model" class="control-label"></label>
                <input asp-for="CarDetail.Model" class="form-control" />
                <span asp-validation-for="CarDetail.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarDetail.Price" class="control-label"></label>
                <input asp-for="CarDetail.Price" class="form-control" />
                <span asp-validation-for="CarDetail.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarDetail.Color" class="control-label"></label>
                <input asp-for="CarDetail.Color" class="form-control" />
                <span asp-validation-for="CarDetail.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarDetail.Year" class="control-label"></label>
                <input asp-for="CarDetail.Year" class="form-control" />
                <span asp-validation-for="CarDetail.Year" class="text-danger"></span>
            </div>
            <select asp-for="CarDetail.CarType" asp-items="Html.GetEnumSelectList<CarType>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group row">
                <div class="col-5">
                    <input type="file" name="files" class="form-control" asp-for="Image"/>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
